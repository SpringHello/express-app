extends layout

block content
  div(id='background')
    div(id='header')
      header
        h1 javascript技术博客
        div(id="auth")
          span(id="login") 登录
          span(style="vertical-align: text-bottom;margin:0rem .2rem;") |
          span(id="sign") 注册
    div(id='container')
      .main
        main(id='articleList')
          h1 #{articleList[0].title}
          div(id='content')
            article !{articleList[0].content}
            div(id='mask')
          div(id='removeMask')
            span 阅读全文
          h1(id='newArticle') 最新文章
          ul(id='more')
            - for(var i=1;i<articleList.length;i++){
            li
              a(href='#{articleList[i].target}') #{articleList[i].title}
            - }
        .classification(id='classification')
          h1(id='articleType') 文章分类
            ul(id='more')
              li
                a(href='/category/javascript') javascript
  script(src="/script/jquery-3.2.1.min.js")
  script(src="/script/common.js")


